			ИначеЕсли ИмяЭлемента = "ГрадусУгла" Тогда
				ПредопрЭл.код = "9998";
			КонецЕсли;
			ПредопрЭл.Записать();
		КонецЕСли;
		
	КонецЕсли;
		
	Возврат ПредопрЭл.Ссылка;
	
КонецФункции

